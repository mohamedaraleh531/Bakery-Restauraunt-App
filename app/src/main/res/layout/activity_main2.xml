<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFDD0"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">


        <TextView
            android:id="@+id/menuTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MENU"
            android:textSize="36sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000"
            android:paddingBottom="24dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/croissantImage"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/croissant"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/croissantName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Croissant"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <CheckBox
                    android:id="@+id/croissantCheese"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Cheese (+$1.00)"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/croissantChocolate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chocolate Filling (+$1.50)"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/cakeImage"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/cake"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/cakeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Slice of Cake"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <CheckBox
                    android:id="@+id/cakeStrawberries"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Strawberries (+$1.00)"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/cakeWhipped"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Whipped Cream (+$0.75)"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageView
                android:id="@+id/cookieImage"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/cookie"
                android:adjustViewBounds="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/cookieName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chocolate Chip Cookie"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <CheckBox
                    android:id="@+id/cookieExtraChips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Extra Chocolate Chips (+$0.50)"
                    android:textSize="18sp" />

                <CheckBox
                    android:id="@+id/cookieWalnuts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Walnuts (+$0.75)"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/nextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Next"
            android:backgroundTint="#FF9800"
            android:textSize="20sp"
            android:paddingTop="16dp" />

    </LinearLayout>
</ScrollView>
